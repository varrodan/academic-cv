@INPROCEEDINGS{uml2004_meta,
  author = {D{\'a}niel Varr{\'o} and Andr{\'a}s Pataricza},
  title = {Generic and Meta-Transformations for Model Transformation Engineering},
  booktitle = {Proc. UML 2004: 7th International Conference on the Unified Modeling
